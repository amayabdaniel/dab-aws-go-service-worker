# Application Configuration
PORT=8080
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/jobsdb?sslmode=disable
# Alternative individual settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=dbuser
DB_PASSWORD=dbpass
DB_NAME=jobsdb

# AWS Configuration
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# SQS Configuration
SQS_QUEUE_URL=https://sqs.us-east-2.amazonaws.com/123456789/jobs-queue
SQS_ENDPOINT=http://localhost:4566  # For LocalStack only

# Environment
ENVIRONMENT=development  # development, staging, production

# Feature Flags
ENABLE_SCHEDULER=true
ENABLE_HEALTH_METRICS=true

# Performance Tuning
WORKER_BATCH_SIZE=10
WORKER_POLL_INTERVAL=5s
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=5

# Security
API_RATE_LIMIT=100  # requests per minute
API_TIMEOUT=30s
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,https://app.example.com

# Monitoring
ENABLE_TRACING=false
TRACING_ENDPOINT=http://localhost:4318
METRICS_ENDPOINT=http://localhost:9090

# Scheduler Cron Settings (if customizing)
CLEANUP_CRON="0 */5 * * * *"      # Every 5 minutes
HEALTH_REPORT_CRON="0 0 * * * *"  # Every hour
AGGREGATION_CRON="0 0 2 * * *"    # Daily at 2 AM
EOF < /dev/null